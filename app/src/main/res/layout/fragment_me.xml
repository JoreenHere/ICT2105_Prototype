<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileCardView"
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:background="#81251EE4"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="2dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/dpBorderCardView"
                android:layout_width="147dp"
                android:layout_height="135dp"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#E91E63"
                app:cardCornerRadius="300dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/userDPImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_group_24px" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="212dp"
                android:layout_height="23dp"
                android:layout_marginTop="16dp"
                android:text="@string/username"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dpBorderCardView" />

            <RatingBar
                android:id="@+id/userRatingBar"
                android:layout_width="244dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usernameTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="379dp"
            android:layout_height="77dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileCardView" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
            tools:layout_editor_absoluteX="3dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridView
                    android:id="@+id/listingGridView"
                    android:layout_width="408dp"
                    android:layout_height="354dp"
                    android:animateLayoutChanges="true"
                    android:columnWidth="100dp"
                    android:listSelector="@drawable/book"
                    android:numColumns="auto_fit">

                </GridView>
            </FrameLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>