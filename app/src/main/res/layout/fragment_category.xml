<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context=".ui.category.CategoryFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0pt">

            <androidx.cardview.widget.CardView
                android:id="@+id/bookCard"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:clickable="true"
                android:focusable="auto"
                android:visibility="visible"
                app:cardCornerRadius="2dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="BOOKS"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="120dp"
                    android:scaleX="2"
                    android:src="@drawable/book" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/spacerCard3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:cardBackgroundColor="#FFFFFF" />

            <androidx.cardview.widget.CardView
                android:id="@+id/furnitureCard"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="#C53232">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="FURNITURE"
                    android:scaleX="2"
                    android:src="@drawable/furniture" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/spacerCard1"
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cat1Card"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="#BA2AB3A4" />

            <androidx.cardview.widget.CardView
                android:id="@+id/spacerCard2"
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cat2Card"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="#CC1414">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/spacerCard"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="#2196F3" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="#2196F3" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="#2196F3" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="#2196F3" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="#2196F3" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
